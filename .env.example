APP_NAME=Laravel
APP_ENV=local
APP_KEY=
# PRODUCTION SECURITY: Set to false in production
APP_DEBUG=false
APP_URL=https://coprra.com
APP_TIMEZONE=UTC
APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

# Security Headers and HTTPS Enforcement
APP_FORCE_HTTPS=true
APP_HSTS_MAX_AGE=31536000
APP_CONTENT_SECURITY_POLICY=true

# CDN configuration
# Set ASSET_URL to your CDN base to serve assets via CDN
ASSET_URL=
# Single primary CDN URL; used as fallback if ASSET_URL not set
CDN_URL=
# Optional: multiple CDN base URLs (comma-separated) for failover/rotation
CDN_URLS=
# Toggle CDN asset delivery helper logic (reserved for future use)
CDN_ENABLED=false
# Failover attempt flag if primary is unreachable
CDN_FAILOVER=true
# Timeout for CDN health checks in milliseconds
CDN_TIMEOUT_MS=500

# CORS configuration
# Comma-separated list of allowed origins. Example:
#   http://localhost:5173,http://127.0.0.1:5173,https://frontend.example.com
CORS_ALLOWED_ORIGINS=

# Comma-separated HTTP methods allowed for CORS requests.
# Defaults to REST methods and OPTIONS for preflight
CORS_ALLOWED_METHODS=GET,POST,PUT,PATCH,DELETE,OPTIONS

# Comma-separated list of request headers allowed
CORS_ALLOWED_HEADERS=Accept,Authorization,Content-Type,X-Requested-With,X-CSRF-TOKEN

# Comma-separated list of response headers exposed to the browser
CORS_EXPOSED_HEADERS=

# Seconds to cache preflight responses
CORS_MAX_AGE=600

# Whether to send cookies/authorization headers on cross-origin requests
# Enable only if required (e.g., Sanctum SPA auth)
CORS_SUPPORTS_CREDENTIALS=true

# Frontend URL for production if different from APP_URL
FRONTEND_URL=

LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=single
LOG_LEVEL=info
LOG_STDERR_FORMATTER=
LOG_EMERGENCY_CHANNEL=single
LOG_AUDIT_ENABLED=true
LOG_SECURITY_ENABLED=true
LOG_PERFORMANCE_ENABLED=true
LOG_MAX_FILES=30
LOG_DAILY_ROTATION=true

DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=coprra_production
DB_USERNAME=coprra_user
DB_PASSWORD=
DB_CHARSET=utf8mb4
DB_COLLATION=utf8mb4_unicode_ci
DB_PREFIX=
DB_STRICT_MODE=true
DB_ENGINE=InnoDB
DB_TIMEZONE=+00:00
DB_SSL_MODE=REQUIRED
DB_SSL_CERT=
DB_SSL_KEY=
DB_SSL_CA=
DB_CONNECTION_TIMEOUT=60
DB_READ_TIMEOUT=60
DB_WRITE_TIMEOUT=60

BROADCAST_DRIVER=redis
CACHE_DRIVER=redis
CACHE_PREFIX=coprra_cache
CACHE_TTL=3600
FILESYSTEM_DISK=s3
QUEUE_CONNECTION=redis
QUEUE_FAILED_DRIVER=database
SESSION_DRIVER=redis
SESSION_LIFETIME=120
SESSION_ENCRYPT=true
SESSION_HTTP_ONLY=true
SESSION_SAME_SITE=strict

MEMCACHED_HOST=127.0.0.1

REDIS_HOST=127.0.0.1
REDIS_PASSWORD=
