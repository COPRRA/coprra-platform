# ============================================================================
# Security and Monitoring Configuration
# ============================================================================

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX_ATTEMPTS=60
RATE_LIMIT_DECAY_MINUTES=1
RATE_LIMIT_PREFIX=throttle

# CSRF Protection
CSRF_ENABLED=true
CSRF_TOKEN_LIFETIME=7200
CSRF_REGENERATE_TOKEN=true

# XSS Protection
XSS_PROTECTION_ENABLED=true
CONTENT_TYPE_NOSNIFF=true
FRAME_OPTIONS=DENY
REFERRER_POLICY=strict-origin-when-cross-origin

# SQL Injection Protection
SQL_INJECTION_PROTECTION=true
PREPARED_STATEMENTS_ONLY=true

# File Upload Security
MAX_UPLOAD_SIZE=10240
ALLOWED_FILE_TYPES=jpg,jpeg,png,webp,pdf,doc,docx
SCAN_UPLOADS_FOR_MALWARE=true
QUARANTINE_SUSPICIOUS_FILES=true

# API Security
API_AUTHENTICATION_REQUIRED=true
API_RATE_LIMITING=true
API_REQUEST_SIGNING=true
API_RESPONSE_ENCRYPTION=true

# Monitoring and Alerting
MONITORING_ENABLED=true
PERFORMANCE_MONITORING=true
ERROR_TRACKING=true
UPTIME_MONITORING=true
SECURITY_MONITORING=true

# Google Analytics
GOOGLE_ANALYTICS_ID=

# Backup and Recovery
AUTOMATED_BACKUPS=true
BACKUP_FREQUENCY=daily
BACKUP_RETENTION_DAYS=30
BACKUP_ENCRYPTION=true
DISASTER_RECOVERY_ENABLED=true

