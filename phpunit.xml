<?xml version="1.0" encoding="UTF-8"?>
<phpunit xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="https://schema.phpunit.de/12.4/phpunit.xsd"
         bootstrap="tests/bootstrap.php"
         colors="true"
         processIsolation="false"
         stopOnFailure="false"
         stopOnError="false"
         stopOnIncomplete="false"
         stopOnSkipped="false"
         stopOnRisky="false"
         backupGlobals="true"
         backupStaticProperties="true"
         cacheDirectory=".phpunit.cache"
         beStrictAboutChangesToGlobalState="false"
         beStrictAboutTestsThatDoNotTestAnything="true"
         beStrictAboutOutputDuringTests="true"
         enforceTimeLimit="false"
         timeoutForSmallTests="10"
         timeoutForMediumTests="60"
         timeoutForLargeTests="300"
         executionOrder="random"
         resolveDependencies="true"
         failOnRisky="false"
         failOnWarning="false"
         failOnDeprecation="false"
         failOnNotice="false"
         failOnIncomplete="false"
         failOnSkipped="false"
         displayDetailsOnTestsThatTriggerDeprecations="true"
         displayDetailsOnTestsThatTriggerErrors="true"
         displayDetailsOnTestsThatTriggerNotices="true"
         displayDetailsOnTestsThatTriggerWarnings="true"
         displayDetailsOnIncompleteTests="true"
         displayDetailsOnSkippedTests="true">
  <testsuites>
    <testsuite name="Unit">
      <directory suffix="Test.php">./tests/Unit</directory>
    </testsuite>
    <testsuite name="Feature">
      <directory suffix="Test.php">./tests/Feature</directory>
    </testsuite>
    <testsuite name="AI">
      <directory suffix="Test.php">./tests/AI</directory>
      <exclude>
        ./tests/AI/AIBaseTestCase.php
        ./tests/AI/MockAIService.php
      </exclude>
    </testsuite>
    <testsuite name="Security">
      <directory suffix="Test.php">./tests/Security</directory>
    </testsuite>
    <testsuite name="Performance">
      <directory suffix="Test.php">./tests/Performance</directory>
    </testsuite>
    <testsuite name="Integration">
      <directory suffix="Test.php">./tests/Integration</directory>
    </testsuite>
    <testsuite name="Architecture">
      <directory suffix="Test.php">./tests/Architecture</directory>
    </testsuite>
  </testsuites>
  <source>
    <include>
      <directory suffix=".php">./app</directory>
    </include>
    <exclude>
      <directory>./app/Console/Commands/Stubs</directory>
      <file>./app/Http/Kernel.php</file>
    </exclude>
  </source>
  <coverage ignoreDeprecatedCodeUnits="false" 
            pathCoverage="false" 
            disableCodeCoverageIgnore="false"
            includeUncoveredFiles="true">
    <report>
      <clover outputFile="reports/coverage.xml"/>
      <cobertura outputFile="reports/cobertura.xml"/>
      <crap4j outputFile="reports/crap4j.xml" threshold="5"/>
      <html outputDirectory="reports/coverage" lowUpperBound="35" highLowerBound="70"/>
      <php outputFile="reports/coverage.php"/>
      <text outputFile="reports/coverage.txt" showUncoveredFiles="true" showOnlySummary="false"/>
      <xml outputDirectory="reports/coverage-xml"/>
    </report>
  </coverage>
  <php>
    <env name="APP_ENV" value="testing"/>
    <env name="APP_DEBUG" value="false"/>
    <env name="APP_KEY" value="base64:2fl+K+k3WPMO+QrdnDWEbVjQo7EjXQYWmYNgayUk5P0="/>
    <env name="BCRYPT_ROUNDS" value="4"/>
    <env name="CACHE_DRIVER" value="array"/>
    <env name="DB_CONNECTION" value="testing"/>
    <env name="DB_DATABASE" value=":memory:"/>
    <env name="DB_FOREIGN_KEYS" value="true"/>
    <env name="DB_HOST" value=""/>
    <env name="DB_PORT" value=""/>
    <env name="DB_USERNAME" value=""/>
    <env name="DB_PASSWORD" value=""/>
    <env name="MAIL_MAILER" value="array"/>
    <env name="QUEUE_CONNECTION" value="sync"/>
    <env name="SESSION_DRIVER" value="array"/>
    <env name="TELESCOPE_ENABLED" value="false"/>
    <env name="TELESCOPE_STORAGE_DRIVER" value="array"/>
    <env name="TELESCOPE_DB_CONNECTION" value="testing"/>
    <env name="REDIS_CLIENT" value="predis"/>
    <env name="REDIS_HOST" value=""/>
    <env name="REDIS_PORT" value=""/>
    <env name="REDIS_PASSWORD" value=""/>
    <env name="BROADCAST_DRIVER" value="null"/>
    <!-- Test credentials - use environment variables or safe defaults -->
    <env name="TEST_BLOCKCHAIN_VERIFICATION_KEY" value="${TEST_BLOCKCHAIN_VERIFICATION_KEY:-fake-verification-key}"/>
    <env name="TEST_BLOCKCHAIN_TOKEN_ADDRESS" value="${TEST_BLOCKCHAIN_TOKEN_ADDRESS:-fake-token-address}"/>
    <env name="TEST_GENERIC_API_KEY" value="${TEST_GENERIC_API_KEY:-fake-api-key}"/>
    <env name="TEST_GENERIC_SECRET" value="${TEST_GENERIC_SECRET:-fake-secret}"/>
    <env name="TEST_AUTH_PASSWORD" value="${TEST_AUTH_PASSWORD:-secure_test_password}"/>
    <env name="TEST_ENCRYPTION_KEY" value="${TEST_ENCRYPTION_KEY:-fake-encryption-key}"/>
    <env name="TEST_STRIPE_KEY" value="${TEST_STRIPE_KEY:-sk_test_fake_stripe_key}"/>
    <ini name="error_reporting" value="E_ALL"/>
    <ini name="display_errors" value="0"/>
    <ini name="log_errors" value="1"/>
    <ini name="memory_limit" value="2G"/>
    <ini name="max_execution_time" value="0"/>
    <!-- <ini name="xdebug.mode" value="coverage"/> -->
  </php>
  <logging>
    <junit outputFile="reports/junit.xml"/>
    <teamcity outputFile="reports/teamcity.txt"/>
    <testdoxHtml outputFile="reports/testdox.html"/>
    <testdoxText outputFile="reports/testdox.txt"/>
  </logging>
  <extensions>
    <!-- Add any PHPUnit extensions here -->
  </extensions>
</phpunit>
