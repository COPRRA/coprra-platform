# ===================================================================
#  MANDATORY RULES TO FIX 23GB SIZE ISSUE
# ===================================================================
# Ignore entire directories for dependencies and storage.
# This is the most important section.
/vendor
/node_modules

# Storage - Selective ignoring (FIXED: was ignoring ALL storage)
/storage/app/
/storage/framework/cache/
/storage/framework/sessions/
/storage/framework/views/
/storage/logs/
# Exception: Track API documentation and test artifacts
!storage/api-docs/
!storage/api-docs/api-docs.json
!storage/testing/
!storage/test-results/
!storage/coverage/
!storage/reports/

/build

# ===================================================================
#  Laravel Framework Defaults
# ===================================================================
# Ignore environment files, but keep examples.
.env
.env.*
!.env.example
!.env.testing

# Ignore compiled assets and public links.
/public/build
/public/hot
/public/storage

